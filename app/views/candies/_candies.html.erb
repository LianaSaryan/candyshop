<div class = "well">
	<h3>List of Candies in Shop:</h3>

	<% @shop.candies.each do |candy| %>
		<p><strong><%= candy.name %></strong></p>

		<%= link_to "View Candy Details", candy_path(candy) , :class => 'btn btn-default' %>
	<% end %>

</div>

<div class = "well">
	<h3>List of Unshelved Candies in Shop:</h3>

	<% @shop.candies.where(belongs_to_shelf: nil).find_each do |candy| %>
		<p><strong><%= candy.name %></strong></p>
	<% end %>
</div>




